<?xml version="1.0" encoding="utf-8"?>
<game title="Point and Click Adventure Game" width="1920" height="1080" fps="48" entryScene="1">
  <assets path="/assets">
    <player id="player" src="player_default.png" speed="5" origin="50, 50" position="200, 200">
      <animations>
        <idle/>
        <left path="/walking" />
        <right/>
      </animations>
    </player>
    <sprite id="background" src="background.png"/>
    <sprite id="character1" src="npc1.png" position="500, 20" scale="0.5, 1"/>
    <audio id="backgroundSound" src="sound01.wav"/>
    <audio id="abstract" src="sound01.wav" pitch="0.9" volume="90"/>
    <text id="arcadeTxt" src="arcadeclassic.ttf" size="30">ORIGIN</text>
  </assets>
  <scenes>
    <scene sceneId="1" lowerLevelLimit="500" music="backgroundSound">
      <character1 onClickAudio="abstract" pitch="0.3" position="700, 400" scale="-0.6, 1" volume="20"/>
      <character1 onClickAudio="abstract" onClickText="LeftCharacter" position="100, 400" volume="80"/>
      <player position="20, 1000"/>
      <background onClickAudio="abstract"/>
      <arcadeTxt/>
      <arcadeTxt position="100, 200">T</arcadeTxt>
    </scene>
    <scene sceneId="2">
      <background position="200"/>
      <character onClickAudio="abstract" position="500"/>
    </scene>
  </scenes>
</game>